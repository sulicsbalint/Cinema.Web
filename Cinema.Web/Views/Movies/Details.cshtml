<style>
    body {
        background-color: black;
    }
    .movie_card {
        width: 100%;
    }

    .movie_container {
        width: 100%;
        margin: 0 auto;
        border-radius: 10px;
        position: relative;
    }

    .movie_poster {
        position: absolute;
        margin-top: 20vh;
        z-index: 2;
        left: 40px;
        width: 20%;
        /*height: 40vh;*/
    }

    .movie_hero {
        height: 100%;
        margin: 0;
        position: relative;
        overflow: hidden;
        z-index: 1;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

        .movie_hero::before {
            content: '';
            width: 100%;
            height: 50vh;
            position: absolute;
            overflow: hidden;
            background: url("@Url.Action("DisplayCover", "Movies", new { id = ViewBag.Movie.Id })");
            z-index: -1;
        }

    .movie_details {
        padding: 190px 0 0 40vh;
        border: dashed;
    }

        .movie_details > .movie_title {
            color: black;
            font-size: 60px;
            margin-bottom: 13px;
            position: relative;
            opacity: 0.8;

        }

        .movie_details > .movie_duration {
            margin-left: 24px;
        }
</style>

<div class="movie_card">
    <div class="movie_container">
        <img src="@Url.Action("DisplayImage", "Movies", new { id = ViewBag.Movie.Id })" class="movie_poster"/>

        <div class="movie_hero">
            <div class="movie_details">
                <div class="movie_title">@ViewBag.Movie.Title</div>
                <span class="movie_duration">@ViewBag.Movie.Duration</span>
            </div>
        </div>
    </div>
</div>